<h2><%=l(:label_post_new)%></h2>

<%= labelled_form_for :blog, @blog, :url => { :controller => 'blogs', :action => 'new', :project_id => @project },
                                    :html => { :id => 'blog-form', 
                                               :class => nil,
                                               :multipart => true } do |f| %>
<%= render :partial => 'form', :locals => { :f => f } %>
<%= submit_tag l(:button_create) %>
<%= link_to l(:button_cancel), { :controller => 'blogs', :action => 'index', :project_id => @project.id}, :class => "button" %>
<%= link_to_remote l(:label_preview),
                   { :url => { :controller => 'blogs', :action => 'preview', :project_id => @project },
                     :method => 'post',
                     :update => 'preview',
                     :with => "Form.serialize('blog-form')"
                   }, :accesskey => accesskey(:preview) %>
<% end %>
<div class="clear"></div>
<div id="preview" class="wiki"></div>

<% content_for :sidebar_right do  %>
<li><%= link_to l(:button_back), { :controller => 'blogs', :action => 'index', :project_id => @project.id} %></li>
<% end %>