<div id="titleOfProject"><h1><%= link_to(h(@project.name), :controller => 'projects', :action => 'show', :id => @project.id).html_safe unless @project.nil? %> <i class="icon-beaker"></i></h1></div>

<h2 style="float:left;"><%= "#{l(:album)}"%> <i class="icon icon-picture"></i></h2>
<%= link_to(l(:button_cancel), :back, :style => 'float:right;', :class => 'btn') if @albums.any? %>
<div class="clear"></div>

<fieldset>
  <legend><%= l(:new_album) %></legend>
  <%= labelled_form_for(@album, :url => {:controller => 'albums', :action => 'create', :user_id => User.current.id, :project_id => params[:project_id]}, :html => {:class => "MainForm"}) do |f| %>
    <%= render :partial => 'form', :locals => {:f => f, :button1 => l(:create_and_add_photos), :button2 => l(:create_album) } %>
  <%end%>
</fieldset>

<% content_for :header_tags do %>
  <%= robot_exclusion_tag %>
  <%= javascript_include_tag 'ckeditor/ckeditor.js' %>
  <%= stylesheet_link_tag 'ckeditor/editor' %>
<% end %>
