<frameset>
  <label>
    <%= l(:title) + ":" %>
  </label>
  <%= f.text_field :title, :size => 35 %>
  <br />
  <label>
    <%= l(:description) + ":" %>
  </label>
  <br />
  <%= f.text_area :description, :size => "58x5" %>

  <%= hidden_field_tag :go_to %>

  <p>
    <%= f.submit button1 %>
    <%= f.submit button2, :onclick => 'set_goto();' %>
  </p>
</frameset>
<%= javascript_tag ' 

function set_goto(){
  $("#go_to").val("only_create");
};
'%>