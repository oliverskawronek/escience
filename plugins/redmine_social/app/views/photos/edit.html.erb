<h3><%= l(:help) %></h3>
<p>
  <%= l(:tags_are_keywords_you_use_to_organize_your_photos) %>
  <%= link_to l(:show_this_photo), user_photo_path(@user, @photo) %>
  <%= link_to l(:back_to_my_photos), user_photos_path(@user) %>
</p>

<%= link_to l(:delete_this_photo), user_photo_path(@user, @photo), :method => :delete, :confirm => l(:are_you_sure_you_want_to_delete_this_photo) %>

<h3><%= l(:editing_photo) %></h3>

<%= error_messages_for @photo %>
<%= form_for(@photo, :url => user_photo_path(@user, @photo), :html => { :method => :put, :class => "MainForm" }) do |f| %>
  
  <%= image_tag( @photo.photo.url(:medium), :id => 'photo', :class => 'polaroid' ) %>
  <label>
    <%= l(:tags) %>
  </label>
  <em><%= "(#{l(:optional_keywords_describing_this_photo_separated_by_commas)})" %></em>
  <%= text_field_tag 'tag_list', @photo.tag_list.join(', '), {:autocomplete => "off", :size => 35} %>
  <div id='tag_list_auto_complete' class='auto_complete' class='auto_complete'>
    <%#= auto_complete_field 'tag_list', {:url => { :controller => "tags", :action => 'auto_complete_for_tag_name'}, :tokens => [','] } %>
  </div>


  <label><%= l(:title) + ":" %></label>
  <%= f.text_field :name, :size => 35 %>
  <label><%= l(:description) + ":" %></label>
  <%= f.text_area :description, :size => "58x5" %>
  <label><%= l(:album) + ":" %></label>
  <%= f.select(:album_id, User.current.albums.collect {|album| [album.title, album.id ] }, { :include_blank => true }) %>
  <p><%= submit_tag l(:update) %></p>
<%end%>
<p><%= link_to l(:cancel_and_go_back_to_my_photos), user_photos_path(@user) %></p>