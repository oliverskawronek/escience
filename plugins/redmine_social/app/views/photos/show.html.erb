<div class='profile'>
    <%#= render :partial => 'posts/author_profile', :locals => {:user => @user} %>
</div>

    <fieldset>
      <% if @photo.album %>
          <legend><%= "#{l(:album)}: #{link_to @photo.album.title, user_album_path(@user, @photo.album)}".html_safe %></legend>  
          <%= link_to "<img src='#{@photo.previous_in_album.photo.url(:thumb)}' /><br />".html_safe + l(:previous), user_photo_path(@user, @photo.previous_in_album), :style => 'float: left' if @photo.previous_in_album %>
          
          <%= link_to "<img src='#{@photo.next_in_album.photo.url(:thumb)}' /><br />".html_safe + l(:next) + "&raquo;".html_safe, user_photo_path(@user, @photo.next_in_album), :style => 'float: right' if @photo.next_in_album     %>
          
      <% elsif @previous || @next %> 
          <%= link_to "<img src='#{@previous.photo.url(:thumb)}' /><br />".html_safe + l(:previous), user_photo_path(@user, @previous), :style => 'float: left' if @previous %>
          
          <%= link_to "<img src='#{@next.photo.url(:thumb)}' /><br />".html_safe + l(:next).html_safe, user_photo_path(@user, @next), :style => 'float: right' if @next %>
      <%end%>
    </fieldset>
    <% if @related.any? && false %> 
        <h3><%= l(:related_photos_all_members) %></h3>
        <% @related.each do |photo|%> 
          <fieldset style="background-color: <%= photo.maincolor%>">   
              <%= link_to(
                          image_tag(photo.photo.url(:thumb), :class => "polaroid",:style=>"display: block; margin-left: auto; margin-right: auto;"), user_photo_path(photo.user, photo), {:title => l(:photo_from_user, :photo_description => h(photo.description), :user => photo.user.login)}) %>  
          </fieldset>
        <%end%> 
    <div class='yui'>
        <h3>
          <%= link_to(l(:users_photos, :user => @user.login), user_photos_path(@user)) %>
          <%= link_to(h(@photo.display_name), user_photo_path(@user, @photo))%>
        </h3> 
    </div>
    <%end%>

    <%maincolor = @photo.maincolor%>
    <div style="
    float: right; 
    position: relative; 
    font-size: 20px; 
    background-color: inherit; 
    margin-bottom: -8px; 
    margin-right: 3px; 
    border: 1px solid #DDD;
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    -khtml-border-radius: 10px;
    border-radius: 10px;">
        <% if @is_current_user %>
          <% if @photo.album %>
            <%= link_to('',new_user_album_photo_path(@user,@photo.album), :class => 'icon icon-plus-sign', :style => '') %>
          <%end%>
          <%#= link_to l(:make_this_my_profile_photo), change_profile_photo_user_path(@user, :photo_id => @photo), :method => :put %>
          <%= link_to('', edit_user_photo_path(@user, @photo), :class => 'icon icon-edit', :style => 'padding-top: 3px;') if @is_current_user %>
          <%= link_to('', user_photo_path(@user, @photo), :class => 'icon icon-trash', :style => '', :method => :delete) %>
        <%end%>
    </div>
    <div style="clear:both"></div>
    <fieldset style="background-color: rgba(<%=@photo.maincolor_rgb.join(',')%>,0.75)">
      <legend style="text-shadow: 2px 2px 0px #fff"><%= h @photo.description.to_s.truncate(60) %></legend>
     <div class='centered'><%= tag(:img, :src => @photo.photo(:large), :class => "polaroid",:style=>"display: block; margin-left: auto; margin-right: auto;" ) %></div>
    </fieldset>
    <p><%#= @photo.tags.collect{|t| link_to( h(t.name), tag_url(t), :class => 'tag') }.join(" ").html_safe %></p>

    <fieldset>
      <legend><%= l(:photo_comments) %></legend>
      <p><%= render :partial => 'comments/comments', :locals => { :form_hash => {:action => 'add_comment', :photo_id => @photo}, :comments => @comments} %></p>

      <a id='newest_comment'>
        <%#= render :partial => 'comments/comment', :collection => @photo.comments %>
        <span id='more_comments_links'><%#= more_comments_links(@photo) %></span>
      </a>
    </fieldset>