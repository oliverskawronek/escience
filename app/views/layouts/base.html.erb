<% if User.current.admin?
     session[:current_view_of_eScience] = '3'
   elsif !params[:navigation_group].nil? 
     session[:current_view_of_eScience] = params[:navigation_group]
   elsif session[:current_view_of_eScience]
     params[:navigation_group] = session[:current_view_of_eScience]
   else
     session[:current_view_of_eScience] = '0'
   end 
   
   unless User.current.logged? %>
  <%= render :file => "layouts/public" %>
<% else %>
  <% case session[:current_view_of_eScience]
       when '0' %>
       <%= render :file => "layouts/private" %>
    <% when '1' %>
       <%= render :file => "layouts/team" %>
    <% when '2' %>
       <%= render :file => "layouts/community" %>
    <% when '3' %>
       <%= render :file => "layouts/admin" %>
  <% end %>
<% end %>
