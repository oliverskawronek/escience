<h1>Listing user_messages</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Subject</th>
    <th>body</th>
    <th>receiver</th>
    <th>state</th>
    <th>user</th>
  </tr>

<% @user_messages.each do |user_message| %>
  <tr>
    <td><%=h user_message.author %></td>
    <td><%=h user_message.subject %></td>
    <td><%=h user_message.body %></td>
    <td><%=h user_message.receiver %></td>
    <td><%=h user_message.state %></td>
    <td><%=h user_message.user.mail %></td>
    <td><%= link_to 'Show', user_message %></td>
    <td><%= link_to 'Edit', edit_user_message_path(user_message) %></td>
    <td><%= link_to 'Destroy', user_message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user_message', new_user_message_path %>