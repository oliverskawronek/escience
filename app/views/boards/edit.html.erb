<h2><%= l(:label_board) %> <i class="icon-group"></i></h2>

<%= labelled_form_for @board, :url => project_board_path(@project, @board) do |f| %>
  <div class="btn-group" style="float:right;">
    <%= link_to l(:button_back), :back, :class => 'btn' %>
  </div>
  <div class="clear"></div>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <div class="btn-group" style="float:right;">
    <%= link_to l(:button_cancel), :back, :class => 'btn' %>
    <%= link_to l(:button_save), "#top", :class => 'btn', :onclick =>"$('#hidden_submit').attr('name','commit');$('#new_board').submit();" %>
  </div>
<% end %>
