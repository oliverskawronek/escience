<div id="titleOfProject"><h1><%= link_to(h(@project.name), :controller => 'projects', :action => 'show', :id => @project.id).html_safe unless @project.nil? %> <i class="icon-beaker"></i></h1></div>

<h2 style="float:left"><%= l(:label_board_new) %> <i class="icon-group"></i></h2>
<div class="btn-group" style="float:right;">
  <%= link_to l(:button_back), :back, :class => 'btn' %>
</div>
<div class="clear"></div>

<%= labelled_form_for @board, :url => project_boards_path(@project) do |f| %>
  <fieldset>
    <legend><%= l(:button_create) %></legend>
    <%= hidden_field_tag 'hidden_submit', '' %>
    <%= render :partial => 'form', :locals => {:f => f} %>
    <div class="btn-group" style="float:right;">
      <%= link_to l(:button_cancel), :back, :class => 'btn' %>
      <%= link_to l(:button_create), "#top", :class => 'btn', :onclick =>"$('#hidden_submit').attr('name','commit');$('#new_board').submit();" %>
    </div>
    <div class="clear"></div>
  </fieldset>
<% end %>

<% content_for :header_tags do %>
  <%= javascript_include_tag 'ckeditor/ckeditor.js' %>
  <%= stylesheet_link_tag 'ckeditor/editor' %>
<% end %>
