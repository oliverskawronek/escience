<% content_for :sidebar_right do %>
	<li><%= link_to l(:label_profile), user_path(@user), :class => 'icon icon-user' %></li>
	<li><%= change_status_link(@user) %></li>
	<% if User.current != @user %>
		<li>
          <%= delete_link user_path(@user) %>
        </li>
	<%end%>
<%end%>

<h2><%= link_to l(:label_user_plural), users_path %> &#187; <%=h @user.login %></h2>

<div id="profile">
<%= render_tabs user_settings_tabs %>

<% html_title(l(:label_user), @user.login, l(:label_administration)) -%>
</div>
<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'profile' %>
<% end %>