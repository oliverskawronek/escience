<%= labelled_form_for @project do |f| %>
<%= submit_tag l(:button_save), :class => "btn" %>
<%= render :partial => 'form', :locals => { :f => f } %>
<% unless params[:show_project] %>
  <%= link_to(l(:button_cancel), {:controller => 'projects', :action => 'index', :sub => params[:sub]}, :class => "btn", :style => 'margin-right: 0px') %>
<% else %>
  <%= link_to(l(:button_cancel), {:controller => 'projects', :action => 'show', :id => params[:show_project], :sub => params[:sub]}, :class => "btn", :style => 'margin-right: 0px') %>
<% end %>
<% end %>