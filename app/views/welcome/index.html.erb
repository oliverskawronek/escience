<div class="splitcontentleft">
  <%= textilizable Setting.welcome_text %>
  <% if @news.any? && User.current.logged? %>
  <div class="news box">
  <h3><%=l(:label_news_latest)%></h3>
    <%= render :partial => 'news/news', :collection => @news %>
    <%= link_to l(:label_news_view_all), :controller => 'news' %>
  </div>
  <% end %>
  <%= call_hook(:view_welcome_index_left, :projects => @projects) %>
</div>

<% content_for :sidebar_right do %>
  <%= render :partial => 'sidebar' %>
<% end %>

<%unless User.current.logged? %>
<article class="article">
	<div class="inside">
		<h1>Das Forschungsnetzwerk Sachsen</h1>
		<div class="column" style="padding-right:50px">
		<p><br /><img style="float: right;" title="images/grafik.png" src="images/grafik.png" alt="/images/grafik.png" width="280" height="220" />
                  Diese Plattform bietet einen virtuellen Raum mit anderen Wissenschaftlern zu kommu - nizieren, zusammen neue  Erkenntnisse zu gewinnen und gemeinsame Ressourcen für Forschungszwecke zu entwickeln und teilen. Neben Werkzeuge zur Arbeitsorganisation und Koordinierung von Aktivitäten finden Sie hier umfangreiches Wissen, Medieninhalte und Dokumentationen, sowie Software und Daten für wissenschaftliche Experimente. Sie entscheiden selbst, was, womit und mit wem Sie forschen.  Eine starke Community ist stets an Ihrer Seite. </p>
		</div>
	</div>
</article>

<%else%>
	<article class="article">
		<div class="inside">
			<h1>Das Forschungsnetzwerk Sachsen</h1>
		</div>
	</article>
	<% content_for :sidebar_left do %>
		<div id="login">
		</div>
	<%end%>	
<%end%>

<% if User.current.logged? %>    
<div class="splitcontentright">
    <% if @projects.any? %>
  <div class="projects box">
  <h3><%=l(:label_project_latest)%></h3>
    <ul>
    <% for project in @projects %>
      <% @project = project %>
      <li>
      <%= link_to_project project %> (<%= format_time(project.created_on) %>)
      <%= textilizable project.short_description, :project => project %>
      </li>
    <% end %>
    <% @project = nil %>
    </ul>
  </div>
  <% end %>
    <%= call_hook(:view_welcome_index_right, :projects => @projects) %>
</div>
<%end%>

<% content_for :header_tags do %>
<%= stylesheet_link_tag 'scm' %>
<%= auto_discovery_link_tag(:atom, {:controller => 'news', :action => 'index', :key => User.current.rss_key, :format => 'atom'},
                                   :title => "#{Setting.app_title}: #{l(:label_news_latest)}") %>
<%= auto_discovery_link_tag(:atom, {:controller => 'activities', :action => 'index', :key => User.current.rss_key, :format => 'atom'},
                                   :title => "#{Setting.app_title}: #{l(:label_activity)}") %>
<% end %>
